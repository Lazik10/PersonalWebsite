        <nav class="nav-links">
            <div class="wrapper">
                <div class="nav-button">
                    <div class="side default-side"><a asp-controller="Home" asp-action="Index">Home</a></div>
                    <div class="side hover-side"><a asp-controller="Home" asp-action="Index">Lazik</a></div>
                </div>
            </div>
            <div class="wrapper">
                <div class="nav-button">
                    <div class="side default-side"><a asp-controller="Home" asp-action="Skills">Skills</a></div>
                    <div class="side hover-side"><a asp-controller="Home" asp-action="Skills">Skills</a></div>
                </div>
            </div>
            <div class="wrapper">
                <div class="nav-button">
                    <div class="side default-side"><a asp-controller="Home" asp-action="MyWork">My Work</a></div>
                    <div class="side hover-side"><a asp-controller="Home" asp-action="MyWork">My Work</a></div>
                </div>
            </div>
@*            <div class="wrapper">
                <div class="nav-button">
                    <div class="side default-side"><a asp-controller="Home" asp-action="Games">Games</a></div>
                    <div class="side hover-side"><a asp-controller="Home" asp-action="Games">Games</a></div>
                </div>
            </div>*@
            <div class="wrapper">
                <div class="nav-button">
                    <div class="side default-side"><a asp-controller="Articles" asp-action="Index">Blog</a></div>
                    <div class="side hover-side"><a asp-controller="Articles" asp-action="Index">Blog</a></div>
                </div>
            </div>
            <div class="wrapper">
                <div class="nav-button">
                    <div class="side default-side"><a asp-controller="Home" asp-action="Contact">Contact</a></div>
                    <div class="side hover-side"><a asp-controller="Home" asp-action="Contact">Contact</a></div>
                </div>
            </div>

